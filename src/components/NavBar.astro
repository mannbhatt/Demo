---
const links = [
  { href: "/", text: "Home" },
  { href: "/industries", text: "Industries" },
  { href: "/projects", text: "Projects" },
  { href: "/services", text: "Services" },
  { href: "/about-us", text: "About Us" },
];
---

<div>
  <div class="container mx-auto flex justify-between items-center p-4">
    <a href="/" class="block" id="homeLink">
      <img src="/logo.jpg" alt="Logo" class="h-14 mr-2" />
    </a>

    <button id="hamburgerIcon" class="lg:hidden">
      <svg
        class="w-5 h-5"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 17 14"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 1h15M1 7h15M1 13h15"></path>
      </svg>
    </button>

    <nav class="hidden lg:flex space-x-6 items-center">
      {
        links.map((link) => (
          <a
            href={link.href}
            class="hover:underline hover:text-blue-900 font-medium"
          >
            {" "}
            {link.text}{" "}
          </a>
        ))
      }
      <a
        href="/#contact-us"
        class="focus:ring-4 focus:ring-blue-700 focus:outline-none text-white bg-blue-900 hover:bg-blue-950 transition-colors font-medium duration-300 px-6 py-3 rounded-full flex justify-center items-center"
      >
        Get In Touch
      </a>
    </nav>
  </div>
</div>

<div
  id="mobileNavMenu"
  class="hidden lg:hidden bg-white fixed inset-0 top-[142px] bg-opacity-100 z-[900] flex flex-col justify-between p-6 text-base"
>
  <ul class="flex font-medium flex-col gap-2 flex-1">
    {
      links.map((link) => (
        <li>
          <a
            href={link.href}
            class="block py-2 pr-4 pl-3 text-blue-900 border-blue-900 sm:p-0 border-l-[3px]"
          >
            {link.text}
          </a>
        </li>
      ))
    }
  </ul>
  <div>
    <a
      href="/#contact-us"
      class="focus:ring-4 focus:ring-blue-700 focus:outline-none font-medium text-center text-white bg-blue-900 hover:bg-blue-950 w-full block px-6 py-3 rounded-full"
    >
      Get in touch
    </a>
  </div>
</div>

<script>
  const hamburgerIcon = document.getElementById("hamburgerIcon");
  const mobileNavMenu = document.getElementById("mobileNavMenu");

  if (hamburgerIcon && mobileNavMenu) {
    hamburgerIcon.addEventListener("click", () => {
      mobileNavMenu.classList.toggle("hidden");
      document.body.style.overflow = mobileNavMenu.classList.contains("hidden")
        ? "auto"
        : "hidden";
      document.body.style.height = mobileNavMenu.classList.contains("hidden")
        ? "auto"
        : "100%";
      hamburgerIcon.innerHTML = mobileNavMenu.classList.contains("hidden")
        ? `<svg
          class="w-5 h-5"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 17 14"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 1h15M1 7h15M1 13h15"
          ></path>
        </svg>
      `
        : `<svg
      class="w-5 h-5"
      xmlns="http://www.w3.org/2000/svg"
      fill="currentColor"
      viewBox="0 0 384 512"
    >
      <path
        d="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256 342.6 150.6z"
      ></path>
    </svg>`;
    });

  }
</script>
