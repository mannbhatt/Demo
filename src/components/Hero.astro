---
 
import { fetchHeroImage } from '../utils/sanityData'; 


const heroData = await fetchHeroImage();
const heroImageUrl = heroData[0]?.image?.src;
const heroImageAlt = heroData[0]?.image?.alt

---
<main class="container mx-auto grid md:grid-cols-12 py-10 md:py-16 gap-10">
  <div class="md:col-span-7 flex flex-col gap-4 justify-center px-4">
    <div
      class="flex items-center font-medium space-x-2 text-sm pl-1 pr-2 py-1 text-black border-gray-200 border rounded-3xl w-fit"
    >
      <span
        class="w-5 h-5 bg-[#072F6A] rounded-full flex items-center justify-center"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          xml:space="preserve"
          viewBox="0 0 20 20"
          id="rocket"
          fill="white"
          class="w-3 h-3"
        >
          <path
            d="M11.933 13.069s7.059-5.094 6.276-10.924a.465.465 0 0 0-.112-.268.436.436 0 0 0-.263-.115C12.137.961 7.16 8.184 7.16 8.184c-4.318-.517-4.004.344-5.974 5.076-.377.902.234 1.213.904.959l2.148-.811 2.59 2.648-.793 2.199c-.248.686.055 1.311.938.926 4.624-2.016 5.466-1.694 4.96-6.112zm1.009-5.916a1.594 1.594 0 0 1 0-2.217 1.509 1.509 0 0 1 2.166 0 1.594 1.594 0 0 1 0 2.217 1.509 1.509 0 0 1-2.166 0z"
          ></path>
        </svg>
      </span>
      <span>4.8<span class="text-gray-600 ml-1">customer rating</span></span>
    </div>

    <h1 class="text-5xl lg:text-7xl font-bold leading-none text-gray-900">
      Your Trusted Fabrication Partner
    </h1>
    <p class="text-gray-700 font-medium leading-snug max-w-96">
      Delivering Excellence in Metal Solutions with Integrity and Precision
    </p>
    <a
      class="focus:ring-4 focus:ring-blue-700 focus:outline-none flex items-center justify-center font-medium bg-blue-900 text-white px-6 py-3 rounded-full hover:bg-blue-950 space-x-2 sm:w-fit group mt-4"
      href="#services"
    >
      <span>Check Our Work</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="32"
        height="32"
        class="w-4 h-4 group-hover:-rotate-45 transition-all duration-100"
        fill="currentColor"
        viewBox="0 0 256 256"
        ><path
          d="M221.66,133.66l-72,72a8,8,0,0,1-11.32-11.32L196.69,136H40a8,8,0,0,1,0-16H196.69L138.34,61.66a8,8,0,0,1,11.32-11.32l72,72A8,8,0,0,1,221.66,133.66Z"
        ></path></svg
      >
    </a>

    <div class="flex sm:flex-wrap sm:justify-center lg:justify-start space-x-4">
      {
        ["Engineering", "Construction", "Procurement"].map((item) => (
          <span class="flex items-center text-sm text-gray-600">
            <svg
              class="w-5 h-5 text-blue-900 mr-2"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.93-10.62L9 13.5l-2.93-2.62a.75.75 0 111.06-1.06L9 11.44l3.87-3.56a.75.75 0 011.06 1.06z" />
            </svg>
            {item}
          </span>
        ))
      }
    </div>
  </div>

  <div class="md:col-span-5 md:px-4">
    <img
      src={heroImageUrl}
      class="w-full aspect-square object-cover object-center md:rounded-3xl shadow-lg"
      alt={heroImageAlt}
    />
  </div>
</main>
