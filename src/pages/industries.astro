---
import Layout from "../layouts/Layout.astro";
import { fetchIndustry } from "../utils/sanityData";
import PageFullData from "../components/PageFullData.astro";

const industrydata = await fetchIndustry();

const industryItems = industrydata.map((industry) => ({
  title: industry.title,
  shortDescription: industry.shortDescription,
  slug: industry.slug,
  image: industry.images[0]?.src || "",
  alt: industry.images[0]?.alt || "Default alt text",
}));

const {
  heading = "Industries",
  subheading = "Tailored solutions to meet the unique demands of diverse industries, driving innovation and excellence in every field we serve.",
  category = "industries",
} = Astro.props;
---

<Layout title="Industries" url="/industries">
  <PageFullData
    heading={heading}
    subheading={subheading}
    items={industryItems}
    category={category}
  />
</Layout>
